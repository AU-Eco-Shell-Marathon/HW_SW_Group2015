<UserControl x:Class="RollingRoad.WinApplication.DatasetDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RollingRoad.WinApplication"
             mc:Ignorable="d" d:DesignWidth="100"
             x:Name="DatasetDisplayControl" Height="Auto" Width="Auto">
    <Grid  VerticalAlignment="Top">

        <!-- Close button -->
        <Button Content="X" Margin="0,10,10,0" Width="20" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" Click="Button_Click"/>

        <StackPanel>
            <!-- Name -->
            <TextBlock x:Name="NameLabel" FontSize="15" TextWrapping="Wrap" Text="{Binding Path=DatasetName, ElementName=DatasetDisplayControl}" Margin="10,10,40,0" VerticalAlignment="Top" />

            <!-- Description -->
            <TextBlock TextWrapping="Wrap" Margin="10,10,10,10" Text="{Binding Path=Description, ElementName=DatasetDisplayControl}"/>
        </StackPanel>

    </Grid>
</UserControl>
